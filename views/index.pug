html
	head
		meta(charset='UTF-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css', integrity='sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk', crossorigin='anonymous')
		script(src="https://kit.fontawesome.com/b022257bf2.js" crossorigin="anonymous")
		link(rel='stylesheet', href='/scss/main.css')
		title Twitter Clone!
		
	body
	br
	a(href="https://github.com/" style='color:black')
		i.fab.fa-github.fa-2x(style="padding-left:10px")
	br
	h2(style="padding-top:20px; padding-left:10px")
		a(href="/about" style="text-decoration:none; color:#2676ed;") About
	
	#div.d-flex.justify-content-center.align-items-center
		#mainDiv.d-flex.flex-column.justify-content-center
			h1#title(style='text-align: center;') Share your thoughts!
			form(method='post', action='/')
				.form-group
					input.form-control(type='text', name='name', id='name' placeholder='Your Username')
				.form-group
					textarea.form-control(style='resize:none', name='content', id='content' rows='4', placeholder='What are you thinking about today?...')
				button.btn.btn-outline-primary.btn-lg(type='submit', style='width:100%') Post!
			div(style='height:500px; width:100%;')
				h2(style='padding-top:50px; text-align:center') Recent Posts:
				#postsDiv
					each post, i in posts
						h5(class='userName')= post.username
						p(class='userContent')= post.content
